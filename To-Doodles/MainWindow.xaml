<Window x:Class="To_Doodles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_Doodles"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="360">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="235*"/>
                <RowDefinition Height="42*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <!--ItemsSource="{d:SampleData ItemCount=5}"-->
            <ListView Name="TaskManager" ItemsSource="{d:SampleData ItemCount=5}" Margin="10,30,10,10" Grid.RowSpan="3" Grid.ColumnSpan="2" SelectionChanged="TaskManager_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="local:Task">
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Column="0" Grid.RowSpan="2" Margin="5,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="1" Grid.Row="0" Margin="5,5,0,0" VerticalAlignment="Center" Text="{Binding Title}" FontSize="16"/>
                            <Rectangle Grid.Column="1" Grid.Row="0" Margin="0,0,0,0" VerticalAlignment="Bottom" Height="1" Fill="#FFB0BEC5"/>
                            <TextBlock Grid.Column="1" Grid.Row="1" Margin="5,0,0,5" VerticalAlignment="Top" Text="{Binding Description}" FontSize="12"/>
                            <ComboBox Grid.Column="2" Grid.Row="0" Margin="5,5,5,5" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <ComboBoxItem Content="Edit"/>
                                <ComboBoxItem Content="Delete"/>
                            </ComboBox>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Grid.Column="1" Content="Button" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="60" Height="64"/>
        </Grid>
    </Grid>
</Window>
